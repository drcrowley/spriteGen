extends layout

block content
	.container
		h1= title
		h3 Welcome #{user}
		form(id="upload" enctype="multipart/form-data" action="/api/sprites" method="post")
			.form-group
				label(for='title') Заголовок
				input(type="text" name="title").form-control
			.form-group
				input(type="file" multiple name="userPhoto")
			button(type="submit") Загрузить

		img(src="/img/canvassmith.png")


		h2 Настройки

		form(id="settings" action="/api/settings" method="post")
			input(type="text" name="padding")

			button(type="submit") Сохранить